<%= turbo_frame_tag 'new_feedback' do %>
  <%= form_with(model: @feedback) do |form| %>

    <div> Giving feedback to <%= @friend.username %> </div>

    <%= form.hidden_field :to, value: @friend.id %>

    <% if @feedback.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>

        <ul>
          <% @feedback.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :observation %>
      <%= form.text_field :observation %>
    </div>

    <div class="field">
      <%= form.label :feeling %>
      <%= form.text_field :feeling %>
    </div>

    <div class="field">
      <%= form.label :need %>
      <%= form.text_field :need %>
    </div>

    <div class="field">
      <%= form.label :request %>
      <%= form.text_field :request %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
<% end %>
